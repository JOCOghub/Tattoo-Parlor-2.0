<!DOCTYPE html>
<html>
  <head>
    <title>TattooParlor20</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%if current_customer%>
      <%=link_to "All artists", artists_path%>
      <%=link_to "My Appointments", customer_appointments_path(current_customer)%>
      <%=link_to "New artist", new_customer_artist_path(current_customer)%>
      <%=link_to "New appointment", new_appointment_path%>
      <%=link_to "Logout", logout_path, method: :post%>
    <%else%>
      <%= link_to "Sign Up", signup_path %>
      <%= link_to "Log In", login_path %>
      <%=link_to "Sign in with Google", '/auth/google_oauth2'%>
    <%end%>

    <%= yield %>
  </body>
</html>
